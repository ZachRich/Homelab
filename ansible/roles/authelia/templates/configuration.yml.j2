---
theme: dark

identity_validation:
  reset_password:
    jwt_secret: {{ authelia_jwt_secret | default('change_this_jwt_secret_please_make_it_32_characters') }}

# Remove global default_redirection_url when using cookies format

server:
  address: tcp://0.0.0.0:9091/

log:
  level: debug

totp:
  issuer: {{ domain_name | default('homelab.local') }}

authentication_backend:
  file:
    path: /config/users_database.yml
    password:
      algorithm: bcrypt

access_control:
  default_policy: deny
  rules:
    - domain: auth.{{ domain_name | default('homelab.local') }}
      policy: bypass

    - domain:
        - traefik.{{ domain_name | default('homelab.local') }}
        - prometheus.{{ domain_name | default('homelab.local') }}
      policy: one_factor
      subject: "group:admins"

    - domain:
        - portainer.{{ domain_name | default('homelab.local') }}
        - pihole.{{ domain_name | default('homelab.local') }}
        - grafana.{{ domain_name | default('homelab.local') }}
        - uptime.{{ domain_name | default('homelab.local') }}
      policy: one_factor
      subject: "group:users"

session:
  cookies:
    - domain: {{ domain_name | default('homelab.local') }}
      authelia_url: https://auth.{{ domain_name | default('homelab.local') }}
      default_redirection_url: https://{{ domain_name | default('homelab.local') }}  # Per-cookie redirection URL

  secret: {{ authelia_session_secret | default('change_this_session_secret_please_make_it_32_characters') }}
  expiration: 1h
  inactivity: 5m

  redis:
    host: redis
    port: 6379
    database_index: 0

regulation:
  max_retries: 3
  find_time: 120
  ban_time: 300

storage:
  local:
    path: /config/db.sqlite3
  encryption_key: {{ authelia_storage_encryption_key | default('change_this_encryption_key_please_it_must_be_32_characters_long') }}

notifier:
  filesystem:
    filename: /config/notification.txt