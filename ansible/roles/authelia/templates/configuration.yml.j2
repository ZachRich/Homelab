---
theme: auto
jwt_secret: {{ authelia_jwt_secret | default('change_this_jwt_secret_please') }}
default_redirection_url: http://{{ domain_name | default('homelab.local') }}

server:
  host: 0.0.0.0
  port: 9091

log:
  level: info

totp:
  issuer: {{ domain_name | default('homelab.local') }}

authentication_backend:
  file:
    path: /config/users_database.yml
    password:
      algorithm: argon2id
      iterations: 1
      salt_length: 16
      parallelism: 8
      memory: 64

access_control:
  default_policy: deny
  rules:
    - domain: auth.{{ domain_name | default('homelab.local') }}
      policy: bypass

    - domain:
        - traefik.{{ domain_name | default('homelab.local') }}
        - prometheus.{{ domain_name | default('homelab.local') }}
      policy: one_factor
      subject: "group:admins"

    - domain:
        - portainer.{{ domain_name | default('homelab.local') }}
        - pihole.{{ domain_name | default('homelab.local') }}
        - grafana.{{ domain_name | default('homelab.local') }}
        - uptime.{{ domain_name | default('homelab.local') }}
      policy: one_factor
      subject: "group:users"

session:
  name: authelia_session
  secret: {{ authelia_session_secret | default('change_this_session_secret_please') }}
  expiration: 1h
  inactivity: 5m
  domain: {{ domain_name | default('homelab.local') }}

  redis:
    host: redis
    port: 6379
    database_index: 0

regulation:
  max_retries: 3
  find_time: 120
  ban_time: 300

storage:
  local:
    path: /config/db.sqlite3
  encryption_key: {{ authelia_storage_encryption_key | default('change_this_encryption_key_please_it_must_be_long') }}

notifier:
  filesystem:
    filename: /config/notification.txt