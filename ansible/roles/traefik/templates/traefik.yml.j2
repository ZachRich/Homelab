# Traefik Static Configuration
api:
  dashboard: true
  insecure: false

entryPoints:
  web:
    address: ":80"

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    network: "proxy"
    exposedByDefault: false

  file:
    directory: "/etc/traefik/dynamic"
    watch: true

log:
  level: INFO

accessLog:
  filePath: "/logs/access.log"

metrics:
  prometheus:
    addEntryPointsLabels: true
    addServicesLabels: true